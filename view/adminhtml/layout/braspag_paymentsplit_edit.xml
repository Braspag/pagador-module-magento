<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Webjump\BraspagPagador\Block\Adminhtml\PaymentSplit\Edit" name="braspag_paymentsplit_edit"/>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Webjump\BraspagPagador\Block\Adminhtml\PaymentSplit\Edit\Tabs" name="braspag_paymentsplit_edit_tabs">
                <block class="Webjump\BraspagPagador\Block\Adminhtml\PaymentSplit\Edit\Tab\Main" name="braspag_paymentsplit_edit_tab_main"/>
                <block class="Webjump\BraspagPagador\Block\Adminhtml\PaymentSplit\Edit\Tab\Items" name="braspag_paymentsplit_edit_tab_items"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">main_section</argument>
                    <argument name="block" xsi:type="string">braspag_paymentsplit_edit_tab_main</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">items_section</argument>
                    <argument name="block" xsi:type="string">braspag_paymentsplit_edit_tab_items</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
