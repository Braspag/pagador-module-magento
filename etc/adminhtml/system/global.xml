<?xml version="1.0"?>

<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="webjump_braspag_global" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label">
    	<label>Global Settings</label>
	    <field id="merchant_id" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="20" translate="label" type="text">
	        <label>Merchant ID</label>
	        <comment>store identifier in Braspag. Leave empty to use demo account or contact Braspag to get your own merchant id.</comment>
	        <config_path>payment/braspag_pagador_billet/merchant_id</config_path>
	    </field>
	    <field id="merchant_key" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="20" translate="label" type="text">
	        <label>Merchant Key</label>
	        <comment>Public key for Double Authentication Braspag. Leave empty to use demo account or contact Braspag to get your own merchant id.</comment>
	        <config_path>payment/braspag_pagador_billet/merchant_key</config_path>
	    </field>
	</group>	    
</include>
