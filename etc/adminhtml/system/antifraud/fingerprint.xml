<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="fingerprint" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>FingerPrint</label>
        <field id="org_id" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="20" translate="label" type="text">
            <label>Org ID</label>
            <comment />
        </field>

        <field id="merchant_id" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="25" translate="label" type="text">
            <label>Merchant ID</label>
            <comment />
        </field>

        <field id="use_order_id_to_fingerprint" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="30" translate="label" type="select">
            <label>Use Order ID to Fingerprint</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <comment />
        </field>
    </group>
</include>
