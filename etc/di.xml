<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    
	<!-- Braspag Pagador Transaction Payment Billet -->

    <virtualType name="BraspagTransactionBilletRemoteMethodAdapter" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">\Webjump\BraspagPagador\Model\Payment\Transaction\Billet\Ui\ConfigProvider::CODE</argument>
            <argument name="valueHandlerPool" xsi:type="object">BraspagTransactionBilletValueHandlerPool</argument>
            <argument name="commandPool" xsi:type="object">BraspagTransactionBilletCommandPool</argument>
            <argument name="formBlockType" xsi:type="object">Webjump\BraspagPagador\Block\Form\Billet</argument>
            <argument name="infoBlockType" xsi:type="object">Magento\Payment\Block\Info\Cc</argument>
        </arguments>
    </virtualType>

    <virtualType name="BraspagTransactionBilletConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">\Webjump\BraspagPagador\Model\Payment\Transaction\Billet\Ui\ConfigProvider::CODE</argument>
        </arguments>
    </virtualType>

    <virtualType name="BraspagTransactionBilletConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">BraspagTransactionBilletConfig</argument>
        </arguments>
    </virtualType>

    <virtualType name="BraspagTransactionBilletValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">BraspagTransactionBilletConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="BraspagTransactionBilletSendRequestConfig" type="Webjump\BraspagPagador\Gateway\Transaction\Billet\Config\Config">
        <arguments>
            <argument name="config" xsi:type="object">Magento\Framework\App\Config</argument>
        </arguments>
    </virtualType>

    <virtualType name="BraspagTransactionBilletSendRequest" type="Webjump\BraspagPagador\Gateway\Transaction\Billet\Resource\Send\Request">
        <arguments>
            <argument name="config" xsi:type="object">BraspagTransactionBilletSendRequestConfig</argument>
        </arguments>
    </virtualType>

    <virtualType name="BraspagTransactionBilletSendRequestBuilder" type="Webjump\BraspagPagador\Gateway\Transaction\Billet\Resource\Send\RequestBuilder">
        <arguments>
            <argument name="request" xsi:type="object">BraspagTransactionBilletSendRequest</argument>
        </arguments>
    </virtualType>    

    <virtualType name="BraspagTransactionBilletSendCommand" type="Webjump\BraspagPagador\Gateway\Transaction\Billet\Command\SendCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">BraspagTransactionBilletSendRequestBuilder</argument>
            <argument name="responseHandler" xsi:type="object">\Webjump\BraspagPagador\Gateway\Transaction\Billet\Resource\Send\ResponseHandler</argument>
            <argument name="api" xsi:type="object">\Webjump\Braspag\Pagador\Transaction\BraspagFacade</argument>
        </arguments>
    </virtualType>

    <virtualType name="BraspagTransactionBilletCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="authorize" xsi:type="string">BraspagTransactionBilletSendCommand</item>
            </argument>
        </arguments>
    </virtualType>

</config>